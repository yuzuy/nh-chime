{
  "name": "NH Chime",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Sample Chrome Extension",
  "permissions": [
    "alarms",
    "notifications",
    "tabs",
    "https://www.nnn.ed.nico/courses/*/chapters/*"
  ],
  "content_scripts": [{
    "matches": ["https://www.nnn.ed.nico/courses/*/chapters/*"],
    "js": ["src/chime.js"]
  }],
  "background" : {
    "scripts" : ["src/background.js"],
    "persistent": false
  }
}
